@page "/user-projects"
@using OpenGitSync.Shared.DataTransferObjects;
@layout MainLayout

<h3>User Project Management</h3>

@if (userProjects == null)
{
    <p>Loading user projects...</p>
}
else
{
    @if (userProjects.Count == 0)
    {
        <p>No user projects found.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Project Name</th>
                    <th>Permissions</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var userProject in userProjects)
                {
                    <tr>
                        <td>@userProject.ProjectId</td>
                        <td>@userProject.UserId</td>
                        <td>
                            <button class="btn btn-primary" @onclick="() => EditUserProject(userProject.Id)">Edit</button>
                            <button class="btn btn-danger" @onclick="() => DeleteUserProject(userProject.Id)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@code {
    private List<UserProjectDto> userProjects;

    protected override async Task OnInitializedAsync()
    {
        // Call the user project service or API to retrieve the list of user projects
        // Example: userProjects = await userProjectService.GetUserProjectsAsync();
    }

    private void EditUserProject(long userProjectId)
    {
        // Navigate to the user project edit page with the specified user project ID
        NavigationManager.NavigateTo($"/edit-user-project/{userProjectId}");
    }

    private void DeleteUserProject(long userProjectId)
    {
        // Call the user project service or API to delete the user project with the specified ID
        // Example: await userProjectService.DeleteUserProjectAsync(userProjectId);
        // After successful deletion, you can optionally update the userProjects list or display a success message.
    }
}
