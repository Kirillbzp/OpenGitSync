@page "/projects"
@using OpenGitSync.Client.Services
@using OpenGitSync.Shared.DataTransferObjects;
@using Microsoft.AspNetCore.Authorization;
@inject IProjectService ProjectService

@attribute [Authorize]

<PageTitle>Projects</PageTitle>

<h3>Projects</h3>

@if (ProjectsList == null)
{
    <p>Loading projects...</p>
}
else if (ProjectsList.Count == 0)
{
    <p>No projects found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Project Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in ProjectsList)
            {
                <tr>
                    <td>@project.Name</td>
                    <td>@project.Description</td>
                    <td><a href="/edit-project/@project.Id">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
    
    <a href="/create-project">Create new project</a>
}

@code {
    private List<ProjectDto> ProjectsList { get; set; } = new List<ProjectDto>();

    protected override async Task OnInitializedAsync()
    {
        ProjectsList = await ProjectService.GetProjects();
    }
}
